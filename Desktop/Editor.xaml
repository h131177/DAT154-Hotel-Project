<Window x:Class="Desktop.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Editor" Height="120" Width="800">
    <Grid>
        <TextBox x:Name="ridText" HorizontalAlignment="Left" Height="25" Margin="30,32,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.071,-0.627"/>
        <Button x:Name="deleteButton" Content="Delete" HorizontalAlignment="Left" Height="25" Margin="160,32,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.255,0.625" Click="deleteButton_Click"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Height="25" Margin="264,32,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding}"/>
        <Button x:Name="addRoomButton" Content="Add Room" HorizontalAlignment="Left" Height="25" Margin="397,32,0,0" VerticalAlignment="Top" Width="75" Click="addRoomButton_Click"/>

    </Grid>
</Window>
